{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "lib": ["esnext", "dom"],
      "outDir": "dist",
      
      "paths": {
          "*": ["./node_modules/*", "./src/types/*"]
      },
      "types": [
        "vitest/importMeta",
      ]
  },
  "include": ["api", "src", "tests", ".eslintrc.cjs", ".prettierrc.cjs", "vitest.config.ts"],
}
